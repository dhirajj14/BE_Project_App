<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:background="@drawable/background_gradient"
    tools:context="com.example.smartdustbin.Dustbin_status">

    <TextView
        android:id="@+id/heading_text_menu1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Dustbin Status"
        android:textSize="30dp"
        android:textColor="#11998e"
        android:textAlignment="center"
        android:padding="5dp"
        android:background="@drawable/heading_background"
        />


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycle"></android.support.v7.widget.RecyclerView>

</LinearLayout>
